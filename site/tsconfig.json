{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "files": [
        "*"
    ],
    "exclude": [
        "node_modules"
    ]
}